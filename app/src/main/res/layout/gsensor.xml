<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/gsensor_calibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/GSensor_calibrate"
            android:textSize="25dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gsensor_tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/green"
            android:textSize="18dip" />

        <Button
            android:id="@+id/smt_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/str_smt_test"
            android:textSize="18dip" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/gsensor_iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/error" />

    <TextView
        android:id="@+id/gsensor_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GSensor_info"
        android:textColor="@color/green"
        android:textSize="18dip"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/gsensor_bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Success"
            android:textSize="20dip" />

        <Button
            android:id="@+id/gsensor_bt_failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Failed"
            android:textSize="20dip" />
    </LinearLayout>

</LinearLayout>